 #include <iostream>
 #include <cmath>
using namespace std;
bool verificare_nr_prim (unsigned numar)
{
    if (numar <2)
    {
        return false;
    }
    else if (numar==2)
    {
        return true;
    }
    else if (numar%2==0)
    {
        return false;
    }
    
    for (int i = 3; i <=sqrt(numar) ; i+=2)
    {
        if (numar%i ==0)
        {
            return false;
        }
        
    }
    return true;
}
int nr_prim (unsigned n)
{
    unsigned m;
    m=n+1; 
    while (!verificare_nr_prim(m))    
    {
        m++;
    }
    return m;
}
int main()
{
    unsigned v;
    cout<<"nr: ";
    cin>>v;
    cout<<"numarul prim care este imediat urmatorul dupa numaul introdus este: ";
    cout<<nr_prim(v);
    return 0;
}
