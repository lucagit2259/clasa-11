#include <iostream>

using namespace std;

void cifre(long n, int v[100], int &i)
{
    i = 0;
    while(n)
    {
        v[i] = n % 10;
        n = n / 10;
        i++;
    }
}

void afisare(int v[100], int n)
{
    for(int i = 0; i < n; i++)
    {
        cout << v[i] << " ";
    }
    cout << endl;
}

void interschimbare(int v[100], int m)
{
    unsigned aux;
    for(int i = 0; i < m / 2; i++)
    {
        aux = v[i];
        v[i] = v[m - i - 1];
        v[m - i - 1] = aux;
    }
}

int main()
{
    int v[100]; 
    long nr; 
    int n;
    
    cout << "n = "; 
    cin >> nr;

    cifre(nr, v, n);
    cout << "Cifrele initiale: ";
    afisare(v, n);
    interschimbare(v, n);
    cout << "Cifrele dupa interschimbare: ";
    afisare(v, n);
    return 0;
}
