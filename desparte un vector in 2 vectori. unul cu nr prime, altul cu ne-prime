#include <iostream>
#include <cmath>
using namespace std;

void citeste(int x[100], int nr)
{
    for (int  i = 0; i < nr; i++)
    {
        cout<<"introdu elementul de pe pozitia "<<i+1<<": ";
        cin>>x[i];
    }
    
}
void afisare (int x[100])
{
    int i=0;
    while(x[i])
    {
        cout<<x[i]<<" ";
        i++;
    }
}
int ver_prim (int x[100], int nr)
{
    int n=1;
    if (x[nr]%2==0 && x[nr]!=2) return 0;
    else for (int i = 3; i<= sqrt (x[nr]); i+=2)
    {
        if (x[nr]% i==0)
        {
            n=0;
        }
        
    }
    return n;
}
void separa(int a[100], int b[100], int c[100])
{
    int i=0;
    int j=0;
    int k=0;
    while(a[i])
    {
        if (ver_prim(a, i))
        {
            b[j]=a[i];
            j++;
        }
         else {
            c[k]=a[i];
            k++;
         }
        i++;
    }
}
int main()
{
    int a[100], b[100], c[100];
    int nr;
    cout<<"cate elemente introduceti in vector? "<<endl;
    cin>>nr;
    citeste(a, nr);
    cout<<"elementele introduse sunt: ";
    afisare(a);
    separa(a, b, c);
    cout<<"\n dupa separarea numerelor prime de cele care nu sunt prime, avem: "<<endl;
    cout<<"vectorul cu numere prime: "<<endl;
    afisare (b);
    cout<<"\nvectorul cu numere care nu sunt prime: "<<endl;
    afisare(c);
    return 0;
}
