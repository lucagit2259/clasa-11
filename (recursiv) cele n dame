#include <iostream>
#include <cmath>
using namespace std;
int s[100], n, o;
void tipar(int k)
{
    for(int i=1; i<=n; i++)
    {
        for(int j=1; j<k; j++)
        {
        if(s[i]==j)
        cout<<" @ ";
        else cout<<" # ";
        }
        cout<<endl;
    }
cout<<endl;
}
int valid(int k)
{
    for(int i=1; i<k; i++)
        if(s[k]==s[i] ||abs(s[k]-s[i])==abs(k-i)) return 0;
    return 1;
}
void bt(int k) {
    if(k == n + 1) {
        tipar(k);
        o++;
        cout << endl;
    } else {
        for(int i = 1; i <= n; i++) {
            s[k] = i;
            if(valid(k))
                bt(k + 1);
        }
    }
}
int main()
{
    int k=1;
    cout<<"nr dame: ";
    cin>>n;
    bt(1);
    cout<<endl<<o<<" solutii";
    return 0;
}
